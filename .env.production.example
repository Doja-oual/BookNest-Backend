# Application
NODE_ENV=production
PORT=3000

# MongoDB (CHANGEZ CES VALEURS EN PRODUCTION!)
MONGO_ROOT_USERNAME=your_production_username
MONGO_ROOT_PASSWORD=your_super_secure_password_here
MONGO_DATABASE=booknest_prod

# MongoDB URI
MONGODB_URI=mongodb://your_production_username:your_super_secure_password_here@mongodb:27017/booknest_prod?authSource=admin

# JWT (GÉNÉREZ UNE CLÉ FORTE EN PRODUCTION!)
JWT_SECRET=CHANGE-THIS-TO-A-VERY-STRONG-SECRET-KEY-IN-PRODUCTION
JWT_EXPIRATION=1h
